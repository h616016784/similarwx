<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_gray"
    android:paddingTop="@dimen/distance_normal"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_list_pop_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/tooltip_icon_f"
            android:layout_marginLeft="@dimen/distance_normal"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/item_list_pop_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/dp_72"
            android:layout_marginLeft="@dimen/distance_middle"
            android:layout_marginRight="@dimen/distance_middle"
            android:layout_toRightOf="@id/item_list_pop_iv"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_sub_title"
            android:textColor="@color/white"
            android:text="新建支付"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen1dp"
        android:layout_marginTop="@dimen/distance_normal"
        android:background="@color/white"/>
</LinearLayout>
