<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/item_mitext_left_iv"
        android:layout_marginTop="@dimen/distance_small"
        android:layout_marginLeft="@dimen/distance_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pic_1_20"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_small"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_mitext_left_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_small"
            android:background="@drawable/mi_chatfrom_bg_normal"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/item_mitext_left_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_small"
            android:background="@drawable/mi_chatfrom_voice_playing"
            />
        <ImageView
            android:id="@+id/item_mitext_left_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_test_logo"
            android:layout_marginLeft="@dimen/distance_small"/>
    </LinearLayout>

</LinearLayout>
