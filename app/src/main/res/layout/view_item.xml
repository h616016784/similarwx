<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/distance_middle">
        <ImageView
            android:id="@+id/view_iv"
            android:layout_width="@dimen/avatar_m"
            android:layout_height="@dimen/avatar_m"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_wo_shoucang"/>
        <TextView
            android:id="@+id/view_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/view_iv"
            android:textSize="@dimen/text_sub_title"
            android:layout_marginLeft="@dimen/distance_small"
            android:text="推荐码"/>

        <TextView
            android:id="@+id/view_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_sub_title"
            android:layout_marginRight="@dimen/distance_normal"
            android:text=""/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        />
</LinearLayout>
