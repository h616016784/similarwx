<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="@dimen/distance_normal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/red_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_content_or_button"
            android:layout_centerHorizontal="true"
            android:text="@string/red_detail_name"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/red_detail_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_content_or_button"
            android:layout_below="@id/red_detail_name"
            android:layout_centerHorizontal="true"
            android:text="@string/red_detail_count"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/red_detail_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/red_detail_hit"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</LinearLayout>
