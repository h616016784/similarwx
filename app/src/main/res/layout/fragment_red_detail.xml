<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/red_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_content_or_button"
            android:layout_centerHorizontal="true"
            android:text="@string/red_detail_name"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/red_detail_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_content_or_button"
            android:layout_below="@id/red_detail_name"
            android:layout_centerHorizontal="true"
            android:text="@string/red_detail_count"/>
    </RelativeLayout>
</LinearLayout>
