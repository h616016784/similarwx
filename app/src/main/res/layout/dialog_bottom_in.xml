<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_normal"
        android:layout_marginLeft="@dimen/distance_normal"
        android:layout_marginRight="@dimen/distance_normal"
        android:background="@drawable/shape_corner_white_bg"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dialog_bottom_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/distance_middle"
            android:text="更改验证方式"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialog_bottom_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <Button
        android:id="@+id/dialog_bottom_cancel_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/distance_normal"
        android:background="@drawable/shape_corner_white_bg"
        android:textStyle="bold"
        android:text="取消"
        android:textColor="@color/sky_blue"/>
</LinearLayout>
