<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/distance_small"
    android:background="@color/white"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/item_create_group_rule_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="名称"
            android:textSize="@dimen/text_content_or_button"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/item_create_group_rule_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/distance_normal"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_delete_group_rule"
            android:layout_toLeftOf="@id/item_create_group_rule_name"
            android:visibility="gone"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/item_create_group_rule_grab"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="抢到金额"
        android:textSize="@dimen/text_content_or_button"
        android:textColor="@color/gray"/>
    <TextView
        android:id="@+id/item_create_group_rule_get"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="奖励金额"
        android:textSize="@dimen/text_content_or_button"
        android:textColor="@color/gray"/>
</LinearLayout>
