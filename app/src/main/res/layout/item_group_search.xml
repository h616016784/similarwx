<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/distance_smaller">
        <ImageView
            android:id="@+id/item_group_member_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:src="@drawable/rp_avatar"/>
        <TextView
            android:id="@+id/item_group_member_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_smallest"
            android:layout_marginLeft="@dimen/distance_small"
            android:layout_toRightOf="@id/item_group_member_iv"
            android:textColor="@color/black"
            android:text=""
            android:textSize="@dimen/text_sub_title"
            android:maxLines="1"/>
    </RelativeLayout>

</LinearLayout>
