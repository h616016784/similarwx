<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_middle"
        android:background="@color/gray7"/>
    <RelativeLayout
        android:id="@+id/dialog_create_group_rule_name_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_small"
        android:layout_marginRight="@dimen/distance_small"
        android:padding="@dimen/distance_small">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="奖励规则名称"
            android:textSize="@dimen/text_content_or_button"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/dialog_create_group_rule_name_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/distance_bigger"
            android:background="@null"
            android:minWidth="@dimen/distance_bigger"
            android:textSize="@dimen/text_content_or_button"
            android:layout_centerVertical="true"
            android:text="奖励"
            android:gravity="right"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/distance_normal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/em_right"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_middle"
        android:background="@color/gray7"/>

    <RelativeLayout
        android:id="@+id/dialog_create_group_rule_grab_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_small"
        android:layout_marginRight="@dimen/distance_small"
        android:padding="@dimen/distance_small">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="奖励数字"
            android:textSize="@dimen/text_content_or_button"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/dialog_create_group_rule_grab_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/distance_bigger"
            android:background="@null"
            android:minWidth="@dimen/distance_bigger"
            android:textSize="@dimen/text_content_or_button"
            android:layout_centerVertical="true"
            android:hint="请输入"
            android:gravity="right"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/distance_normal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/em_right"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_middle"
        android:background="@color/gray7"/>

    <RelativeLayout
        android:id="@+id/dialog_create_group_rule_get_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_small"
        android:layout_marginRight="@dimen/distance_small"
        android:padding="@dimen/distance_small">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="奖励金额"
            android:textSize="@dimen/text_content_or_button"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/dialog_create_group_rule_get_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/distance_bigger"
            android:background="@null"
            android:minWidth="@dimen/distance_bigger"
            android:textSize="@dimen/text_content_or_button"
            android:hint="请输入"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/distance_normal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/em_right"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_middle"
        android:background="@color/gray7"/>
    <Button
        android:id="@+id/dialog_create_group_rule_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/distance_normal"
        android:textColor="@color/white"
        android:background="@drawable/selector_normal_bg"
        android:text="添加规则"/>
</LinearLayout>
