<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/item_sys_notice_iv"
        android:layout_margin="@dimen/distance_smaller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rp_avatar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_small"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/distance_smallest"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_sys_notice_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_smaller"
                android:text="未填写"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_or_button" />

            <ImageView
                android:id="@+id/item_sys_notice_sex_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_smaller"
                android:visibility="gone"
                android:src="@drawable/icon_sex_male" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/distance_smallest"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_account"
                />
            <TextView
                android:id="@+id/item_sys_notice_account_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_big"
                android:text="0.00"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/item_sys_notice_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请加入群组"
            android:textColor="@color/black"
            android:textSize="@dimen/text_sub_title"
            />
        <TextView
            android:id="@+id/item_sys_notice_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19:06"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_smaller"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_sys_notice_agree_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/distance_smaller"
                android:paddingBottom="@dimen/distance_smaller"
                android:paddingLeft="@dimen/distance_normal"
                android:paddingRight="@dimen/distance_normal"
                android:background="@drawable/shape_biankuang_blue_bg"
                android:text="同意"
                />
            <TextView
                android:id="@+id/item_sys_notice_deny_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/distance_smaller"
                android:paddingBottom="@dimen/distance_smaller"
                android:paddingLeft="@dimen/distance_normal"
                android:paddingRight="@dimen/distance_normal"
                android:background="@drawable/shape_biankuang_gray_bg"
                android:layout_marginLeft="@dimen/distance_big"
                android:text="拒绝"
            />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
