<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_play_iv"
            android:layout_marginTop="@dimen/distance_smaller"
            android:layout_marginLeft="@dimen/distance_small"
            android:layout_marginBottom="@dimen/distance_smaller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_1_cs"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_smaller"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_play_name_tv"
                android:layout_marginTop="@dimen/distance_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统"
                android:textSize="@dimen/text_sub_title"
                />
            <TextView
                android:id="@+id/item_play_content_tv"
                android:layout_marginTop="@dimen/distance_smallest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息内容"
                android:maxLines="1"
                android:textSize="@dimen/text_tip"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/item_play_num_tv"
            android:layout_marginTop="@dimen/distance_small"
            android:layout_marginLeft="@dimen/distance_smallest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(0)"
            android:textSize="@dimen/text_tip"
            android:textColor="@color/colorRed"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_smaller"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/distance_middle"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_play_back_tv"
                    android:layout_marginTop="@dimen/distance_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返点总计 ¥2.78"
                    android:textSize="@dimen/text_tip"
                    />
                <TextView
                    android:id="@+id/item_play_detail_tv"
                    android:layout_marginTop="@dimen/distance_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击查看详情"
                    android:maxLines="1"
                    android:textSize="@dimen/text_tip"
                    android:textColor="@color/robot_link_element_text_blue"
                    />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen1dp"
        android:background="@color/gray"/>
</LinearLayout>
