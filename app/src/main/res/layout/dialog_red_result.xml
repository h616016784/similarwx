<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_red_bg"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/dialog_red_result_cancel_iv"
        android:layout_marginTop="@dimen/distance_small"
        android:layout_marginLeft="@dimen/distance_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_cancel"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/dialog_red_result_head_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/pic_1_40"/>
        <TextView
            android:id="@+id/dialog_red_result_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_normal"
            android:layout_marginRight="@dimen/distance_normal"
            android:layout_below="@id/dialog_red_result_head_iv"
            android:layout_marginTop="@dimen/distance_small"
            android:gravity="center_horizontal"
            android:text="白富美"
            android:textColor="@color/white"
            android:textSize="@dimen/text_tip"/>

        <TextView
            android:id="@+id/dialog_red_result_tips_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_normal"
            android:layout_marginRight="@dimen/distance_normal"
            android:layout_below="@id/dialog_red_result_name_tv"
            android:layout_marginTop="@dimen/distance_small"
            android:gravity="center_horizontal"
            android:text="您的积分不足，请充值！"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/text_content_or_button"/>

        <ImageView
            android:id="@+id/dialog_red_result_kai_tv"
            android:layout_marginTop="@dimen/distance_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_red_result_tips_tv"
            android:layout_centerHorizontal="true"
            android:src="@drawable/pop_btn_kai"
            />


        <TextView
            android:id="@+id/dialog_red_result_bottom_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_normal"
            android:layout_marginRight="@dimen/distance_normal"
            android:layout_below="@id/dialog_red_result_tips_tv"
            android:layout_marginTop="170dp"
            android:gravity="center_horizontal"
            android:text="看看大家的手气 >"
            android:textColor="@color/white"
            android:textSize="@dimen/text_tip"/>

    </RelativeLayout>
</LinearLayout>
