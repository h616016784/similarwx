<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/message_item_tips_ll"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nim_bg_message_tip"
        android:layout_marginLeft="7dip"
        android:layout_marginRight="7dip"
        android:padding="@dimen/distance_smallest"
        android:gravity="center">
        <ImageView
            android:id="@+id/message_item_tips_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_smaller"
            android:layout_centerVertical="true"
            android:src="@drawable/em_red_packet_ack_message_icon"/>
        <TextView
            android:id="@+id/message_item_tips_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/message_item_tips_iv"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="7dip"
            android:paddingRight="7dip"
            android:textColor="#ffffff"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/message_item_tips_red_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/message_item_tips_label"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/colorRed2"
            android:text="红包"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/message_item_tips_red_finish_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/message_item_tips_red_tv"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="  你的红包已被领完  "
            android:visibility="gone"
            android:textSize="12sp"/>
    </RelativeLayout>
</LinearLayout>
