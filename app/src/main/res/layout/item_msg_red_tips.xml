<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/message_item_tips_ll"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/message_item_tips_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/em_red_packet_ack_message_icon"/>
        <TextView
            android:id="@+id/message_item_tips_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dip"
            android:layout_marginRight="7dip"
            android:layout_toRightOf="@id/message_item_tips_iv"
            android:background="@drawable/nim_bg_message_tip"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="7dip"
            android:paddingRight="7dip"
            android:textColor="#ffffff"
            android:textSize="12sp"/>
    </RelativeLayout>
</LinearLayout>
