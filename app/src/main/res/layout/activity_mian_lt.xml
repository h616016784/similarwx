<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen42dp"
        android:background="@color/colorBlackTitle">
        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/distance_smaller"
            android:layout_marginLeft="@dimen/distance_normal"
            android:text="@string/main_title"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/create_group_iv"
            android:layout_width="@dimen/distance_big"
            android:layout_height="@dimen/distance_big"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/distance_smaller"
            android:layout_marginRight="@dimen/distance_normal"
            android:visibility="gone"
            android:src="@drawable/message_button_bottom_add_selector"/>
        <RelativeLayout
            android:id="@+id/main_load_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/distance_small"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <ProgressBar
                android:id="@+id/main_load_pb"
                style="?android:attr/progressBarStyle"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:layout_centerVertical="true"
                android:layout_gravity="center" />
            <TextView
                android:layout_toRightOf="@id/main_load_pb"
                android:layout_marginLeft="@dimen/distance_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:text="正在加载..."/>
        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/main_net_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/distance_smaller"
        android:background="@color/gray"
        android:gravity="center">

        <ImageView
            android:id="@+id/main_net_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_info_black_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_small"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/main_net_iv"
            android:text="当前网络不可用，请检查你的网络设置"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/main_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/distance_smaller"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/main_search_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance_smaller"
                    android:layout_marginLeft="@dimen/distance_small"
                    android:src="@drawable/img_search"/>
                <EditText
                    android:id="@+id/main_search_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/distance_middle"
                    android:layout_marginTop="@dimen/distance_smaller"
                    android:layout_toRightOf="@id/main_search_iv"
                    android:background="@null"
                    android:textSize="@dimen/text_content_or_button"
                    android:hint="@string/main_search"
                    android:inputType="text"
                    android:lines="1"
                    />
            </LinearLayout>
            <include layout="@layout/include_divider"/>
            <include layout="@layout/include_divider"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_tab_navigation"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/main_rl_explain"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/distance_smallest"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/main_explain_iv"
                    android:layout_width="@dimen/home_bottom_icon_size"
                    android:layout_height="@dimen/home_bottom_icon_size"
                    android:src="@drawable/selector_explain_tab"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_explain_iv"
                    android:layout_centerHorizontal="true"
                    android:text="@string/main_dating"
                    android:textSize="@dimen/text_content_or_button"
                    />
                <ImageView
                    android:id="@+id/main_explain_red_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:src="@drawable/circle_on"
                    android:layout_marginRight="@dimen/distance_big"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/main_rl_chart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/distance_smallest"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/main_rl_chart_iv"
                    android:layout_width="@dimen/home_bottom_icon_size"
                    android:layout_height="@dimen/home_bottom_icon_size"
                    android:src="@drawable/selector_chart_tab"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_rl_chart_iv"
                    android:layout_centerHorizontal="true"
                    android:text="@string/main_msg"
                    android:textSize="@dimen/text_content_or_button"
                    />
                <ImageView
                    android:id="@+id/main_rl_chart_red_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle_on"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/distance_big"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/main_rl_find"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/distance_smallest"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/main_rl_find_iv"
                    android:layout_width="@dimen/home_bottom_icon_size"
                    android:layout_height="@dimen/home_bottom_icon_size"
                    android:src="@drawable/selector_find_tab"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_rl_find_iv"
                    android:layout_centerHorizontal="true"
                    android:text="@string/main_find"
                    android:textSize="@dimen/text_content_or_button"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/main_my_chart"
                android:layout_marginTop="@dimen/distance_smallest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/main_my_chart_iv"
                    android:layout_width="@dimen/home_bottom_icon_size"
                    android:layout_height="@dimen/home_bottom_icon_size"
                    android:src="@drawable/selector_my_tab"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_my_chart_iv"
                    android:layout_centerHorizontal="true"
                    android:text="@string/main_my"
                    android:textSize="@dimen/text_content_or_button"
                    />
            </RelativeLayout>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_marginTop="@dimen/distance_smallest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_ll">
        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>
</LinearLayout>
