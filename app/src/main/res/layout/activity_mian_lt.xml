<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_app_bar"
        android:background="@color/action_bar_black_title_1f1f1f">
        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/distance_smaller"
            android:layout_marginLeft="@dimen/distance_normal"
            android:text="@string/main_title"
            android:textSize="@dimen/text_appbar"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/main_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/distance_middle"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/main_search_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_small"
                android:src="@drawable/search"/>
            <EditText
                android:id="@+id/main_search_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_middle"
                android:layout_marginTop="@dimen/distance_small"
                android:layout_toRightOf="@id/set_pay_password_confirm"
                android:background="@null"
                android:textSize="@dimen/text_content_or_button"
                android:hint="@string/main_search"
                android:inputType="text"
                android:lines="1"
                />
        </LinearLayout>

        <include layout="@layout/include_divider"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_ll">

        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_tab_navigation_big"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/main_rl_explain"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/main_explain_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_explain_tab"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_explain_iv"
                    android:layout_centerHorizontal="true"
                    android:text="@string/main_explain"
                    android:textSize="@dimen/text_content_or_button"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/main_rl_chart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/main_rl_chart_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_chart_tab"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_rl_chart_iv"
                    android:layout_centerHorizontal="true"
                    android:text="@string/main_chart"
                    android:textSize="@dimen/text_content_or_button"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/main_my_chart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/main_my_chart_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_my_tab"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_my_chart_iv"
                    android:layout_centerHorizontal="true"
                    android:text="@string/main_my"
                    android:textSize="@dimen/text_content_or_button"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
