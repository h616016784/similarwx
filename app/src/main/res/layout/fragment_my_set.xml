<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f5"
    android:orientation="vertical">
    <com.android.similarwx.widget.BaseItemView
        android:layout_marginTop="@dimen/distance_normal"
        android:id="@+id/my_set_account_bv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.android.similarwx.widget.BaseItemView
        android:id="@+id/my_set_phone_bv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/my_set_sound_set_rl"
        android:layout_marginTop="@dimen/distance_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/distance_small"
        android:background="@color/white">

        <TextView
            android:id="@+id/view_base_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_sub_title"

            android:layout_marginLeft="@dimen/distance_small"
            android:text="声音"/>

        <com.android.similarwx.widget.toggle.ToggleButton
            android:id="@+id/my_set_sound_set_tg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/distance_big"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <com.android.similarwx.widget.BaseItemView
        android:layout_marginTop="@dimen/distance_normal"
        android:id="@+id/my_set_password_bv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
