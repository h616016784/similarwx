<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/distance_smallest"
    android:layout_marginBottom="@dimen/distance_smallest"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/item_chart_iv"
        android:layout_marginTop="@dimen/distance_smaller"
        android:layout_marginBottom="@dimen/distance_smaller"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/pic_1_cs"
        android:layout_weight="1"/>
    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_smaller"
        android:layout_weight="3"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_chart_name_tv"
            android:layout_marginTop="@dimen/distance_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统"
            android:textSize="@dimen/text_sub_title"
            />
        <TextView
            android:id="@+id/item_chart_content_tv"
            android:layout_marginTop="@dimen/distance_smallest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息内容"
            android:maxLines="1"
            android:textSize="@dimen/text_tip"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/item_chart_role_tv"
        android:layout_marginTop="@dimen/distance_normal"
        android:layout_marginRight="@dimen/distance_normal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/service_item_role"
        android:textSize="@dimen/text_tip"
        />
</LinearLayout>
