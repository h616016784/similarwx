<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/gl_keys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_num1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen52dp"
                android:background="@drawable/s_solid_white_pressedmask"
                android:gravity="center"
                android:text="@string/one"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen1dp"
                android:background="@color/gainsboro" />

            <TextView
                android:id="@+id/tv_num4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen52dp"
                android:background="@drawable/s_solid_white_pressedmask"
                android:gravity="center"
                android:text="@string/four"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen1dp"
                android:background="@color/gainsboro" />

            <TextView
                android:id="@+id/tv_num7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen52dp"
                android:background="@drawable/s_solid_white_pressedmask"
                android:gravity="center"
                android:text="@string/seven"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen1dp"
                android:background="@color/gainsboro" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen52dp"
                android:background="@color/silver"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen24dp" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dimen1dp"
            android:layout_height="match_parent"
            android:background="@color/gainsboro" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_num2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen52dp"
                android:background="@drawable/s_solid_white_pressedmask"
                android:gravity="center"
                android:text="@string/two"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen1dp"
                android:background="@color/gainsboro" />

            <TextView
                android:id="@+id/tv_num5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen52dp"
                android:background="@drawable/s_solid_white_pressedmask"
                android:gravity="center"
                android:text="@string/five"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen1dp"
                android:background="@color/gainsboro" />

            <TextView
                android:id="@+id/tv_num8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen52dp"
                android:background="@drawable/s_solid_white_pressedmask"
                android:gravity="center"
                android:text="@string/eight"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen1dp"
                android:background="@color/gainsboro" />

            <TextView
                android:id="@+id/tv_num0"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen52dp"
                android:background="@drawable/s_solid_white_pressedmask"
                android:gravity="center"
                android:text="@string/zero"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen24dp" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dimen1dp"
            android:layout_height="match_parent"
            android:background="@color/gainsboro" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_num3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen52dp"
                android:background="@drawable/s_solid_white_pressedmask"
                android:gravity="center"
                android:text="@string/three"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen1dp"
                android:background="@color/gainsboro" />

            <TextView
                android:id="@+id/tv_num6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen52dp"
                android:background="@drawable/s_solid_white_pressedmask"
                android:gravity="center"
                android:text="@string/six"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen1dp"
                android:background="@color/gainsboro" />

            <TextView
                android:id="@+id/tv_num9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen52dp"
                android:background="@drawable/s_solid_white_pressedmask"
                android:gravity="center"
                android:text="@string/nine"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen1dp"
                android:background="@color/gainsboro" />

            <ImageView
                android:id="@+id/iv_backspace"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen52dp"
                android:background="@drawable/s_solid_silver_corner"
                android:contentDescription="@string/app_name"
                android:cropToPadding="true"
                android:gravity="center"
                android:padding="@dimen/dimen15dp"
                android:scaleType="centerInside"
                android:src="@mipmap/backspace"
                android:text="@string/one"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen24dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/gl_keys"
        android:background="@null">

        <LinearLayout
            android:layout_width="@dimen/dimen245dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/r_solid_white_corner"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen42dp">

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="@dimen/dimen42dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:cropToPadding="true"
                    android:padding="@dimen/dimen9dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/close_r" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/input_payment_password"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen1dp"
                android:background="@color/gainsboro" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen16dp"
                android:text="@string/chart_recharge"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen10dp"
                android:textColor="@color/black"
                android:textSize="21sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen37dp"
                android:layout_margin="@dimen/dimen15dp"
                android:background="@drawable/r_solid_white_stroke_cornflowerblue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pw0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen16dp" />

                <View
                    android:layout_width="@dimen/dimen1dp"
                    android:layout_height="match_parent"
                    android:background="@color/silver" />

                <TextView
                    android:id="@+id/tv_pw1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen16dp" />

                <View
                    android:layout_width="@dimen/dimen1dp"
                    android:layout_height="match_parent"
                    android:background="@color/silver" />

                <TextView
                    android:id="@+id/tv_pw2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen16dp" />

                <View
                    android:layout_width="@dimen/dimen1dp"
                    android:layout_height="match_parent"
                    android:background="@color/silver" />

                <TextView
                    android:id="@+id/tv_pw3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen16dp" />

                <View
                    android:layout_width="@dimen/dimen1dp"
                    android:layout_height="match_parent"
                    android:background="@color/silver" />

                <TextView
                    android:id="@+id/tv_pw4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen16dp" />

                <View
                    android:layout_width="@dimen/dimen1dp"
                    android:layout_height="match_parent"
                    android:background="@color/silver" />

                <TextView
                    android:id="@+id/tv_pw5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen16dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>